<Window x:Class="Renfrew.Core.Grammars.MousePlot.PlotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Renfrew.Core.Grammars.MousePlot"
        mc:Ignorable="d"
        AllowsTransparency="True" WindowStyle="None"
        Title="PlotWindow" Height="357.415" Width="537.606"
        WindowState="Maximized"
        Topmost="True"
>
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="0.0" />
    </Window.Background>
    <Canvas Loaded="Canvas_Loaded" Name="mainCanvas">
        <Canvas.Effect>
            <DropShadowEffect ShadowDepth="2" />
        </Canvas.Effect>
        <Canvas.Background>
            <VisualBrush TileMode="Tile" Viewport="7,7,100,100" ViewportUnits="Absolute" ViewboxUnits="Absolute">
                <VisualBrush.Visual>
                    <Canvas>
                        <Line SnapsToDevicePixels="True" Stroke="Yellow" StrokeThickness=".01" X1="1" StrokeDashArray="11" />
                        <Line SnapsToDevicePixels="True" Stroke="Yellow" StrokeThickness=".01" Y1="1" StrokeDashArray="11" />
                    </Canvas>
                </VisualBrush.Visual>
            </VisualBrush>
        </Canvas.Background>
        <Label x:Name="label" Content="00" Canvas.Left="8" Canvas.Top="8" FontSize="48" Background="{x:Null}" Foreground="Yellow" Opacity="0.7" Height="98" Width="98" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Consolas" />

    </Canvas>


</Window>
