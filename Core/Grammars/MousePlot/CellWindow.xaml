<local:BaseWindow x:Class="Renfrew.Core.Grammars.MousePlot.CellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Renfrew.Core.Grammars.MousePlot"
        mc:Ignorable="d"
        Title="CellWindow" Height="100" Width="100"

        AllowsTransparency="True"
        WindowStyle="None"
        Topmost="True"
>
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="0.0" />
    </Window.Background>
    <Grid>
        <Border BorderBrush="Yellow" BorderThickness="4" SnapsToDevicePixels="True" />
        <Rectangle Stroke="Black" StrokeThickness="1" />
    </Grid>
</local:BaseWindow>
